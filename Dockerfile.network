FROM python:3.9-slim

WORKDIR /app

# --- QUAN TRỌNG: Cài đặt gcc và các thư viện biên dịch ---
# netifaces CẦN gcc để cài đặt, nếu thiếu dòng này sẽ lỗi
RUN apt-get update && apt-get install -y \
    network-manager \
    iproute2 \
    gcc \
    python3-dev \
    libc-dev \
    && rm -rf /var/lib/apt/lists/*

# Cài thư viện Python
RUN pip install flask flask-cors netifaces

COPY network_api.py .

EXPOSE 5000

CMD ["python", "network_api.py"]
